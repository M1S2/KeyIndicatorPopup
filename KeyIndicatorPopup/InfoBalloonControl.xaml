<UserControl x:Class="KeyIndicatorPopup.InfoBalloonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyIndicatorPopup"
             mc:Ignorable="d" 
             d:DesignHeight="300">

    <Grid>
        <Border Background="#CCA9A9A9" BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="2" CornerRadius="10" MinWidth="150" Height="150" Margin="50">
            <Grid>
                <TextBlock FontSize="16" Padding="10" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" Text="{Binding TitleText}"/>
                <TextBlock FontSize="45" Padding="10" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding InfoText}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="KeyIndicatorPopup.InfoBalloonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyIndicatorPopup"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.DataContext>
        <Binding Source="{StaticResource notifyViewModel}"/>
    </UserControl.DataContext>
    
    <Grid>
        <Border Background="#CCA9A9A9" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Width="150" Height="150" Margin="50">
            <TextBlock FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PressedKeyName}"/>
        </Border>
    </Grid>
</UserControl>
